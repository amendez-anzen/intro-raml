{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "http://jsonschema.net",
    "required": true,
    "description": "Authentication Credentials",
    "properties": {
        "username": {
            "type": "string",
            "required": true,
            "minLength": 4,
            "maxLength": 20
        },
        "password": {
            "type": "string",
            "required": true,
            "minLength": 4,
            "maxLength": 30
        }
    }
}